{
  "name": "thread-stack-mcp",
  "version": "0.1.0",
  "description": "MCP server for intelligent querying and updating of thread-stack PKM notes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "thread-stack-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:bench": "jest --testPathPattern=benchmark.test.ts --runInBand",
    "benchmark": "tsc && node dist/scripts/benchmark.js",
    "rebuild-index": "tsc && node -e \"const { IndexManager } = require('./dist/index-manager.js'); const path = process.env.THREAD_STACK_PATH || '.'; const mgr = new IndexManager(path); mgr.rebuild().then(() => console.log('Index rebuilt successfully')).catch(console.error);\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "pkm",
    "thread-stack",
    "knowledge-management",
    "notes",
    "markdown",
    "claude"
  ],
  "author": "nlsherman-24861",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nlsherman-24861/thread-stack-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.3.3"
  }
}
